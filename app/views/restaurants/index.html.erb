  <div class="row">
    <% @restaurants.each do |restaurant| %>
      <div class="col-3 my-2 mx-0">
        <div class="card text-center" style="width: 16rem;">
          <div class="card-body">
            <h5 class="card-title"><%= restaurant.name %></h5>
            <p class="card-text"><%= restaurant.category.capitalize %></p>
            <p><%= link_to "See details", restaurant_path(restaurant), class: "btn btn-primary"%></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>